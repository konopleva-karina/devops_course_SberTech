pipeline {
    agent any
    tools {
        maven 'Maven_Home'
    }
    stages {
        stage('Change workdir') {
            steps {
                sh "cd hello/"
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean -B -DskipTests clean package"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
