pipeline {
    agent any
    tools {
        maven 'Maven_Home'
        allure 'Allure'
        ansible 'Ansible'
    }
    stages {
        stage('Build') {
            steps {
                sh "mvn clean install -f hello/pom.xml"
            }

            post {
                always {
                    junit(
                        testResults: 'hello/target/surefire-reports/TEST-*.xml'
                    )
                }
            }
        }
        stage('Allure report') {
                steps {
                script {
                  allure([
                          includeProperties: false,
                          jdk: '',
                          properties: [],
                          reportBuildPolicy: 'ALWAYS',
                          results: [[path: 'hello/target/surefire-reports/']]
                  ])
                }
                }
        }
        stage('SonarQube') {
            steps {
                withSonarQubeEnv('My SonarQube Server') {
                    sh 'mvn clean package sonar:sonar -Dsonar.host.url=http://172.22.0.2:9000 -Dsonar.login=admin -Dsonar.password=111 -X -e -f hello/pom.xml'
                }
            }
        }

        stage('Quality Gate') {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
        stage('Deploy PROM') {
            steps {
                script {
                    ansiblePlaybook playbook: 'hello/prom-deploy.yml',
                    disableHostKeyChecking: true,
                    inventory: 'hello/inventory.yml'
                }
            }
        }
    }
    post {
        always {
            cleanWs disableDeferredWipeout: true, deleteDirs: true
        }
    }
}
