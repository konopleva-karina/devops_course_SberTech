pipeline {
    agent any
    tools {
        maven 'Maven_Home'
        allure 'Allure'
    }
    stages {
        stage('Build') {
            steps {
                sh "mvn clean -f hello/pom.xml"
                // sh "mvn package -DskipTests -f hello/pom.xml"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -f hello/pom.xml'
            }
            post {
                always {
                    junit(
                    testResults: 'hello/target/surefire-reports/TEST-*.xml'
                    )
                }
            }
        }
        stage('Allure report') {
                steps {
                script {
                  allure([
                          includeProperties: false,
                          jdk: '',
                          properties: [],
                          reportBuildPolicy: 'ALWAYS',
                          results: [[path: 'hello/target/surefire-reports/']]
                  ])
                }
                }
        }
        stage('Sonar') {
            steps {
                 sh 'mvn sonar:sonar -Dsonar.host.url=http://0.0.0.0:9000 -Dsonar.login=admin -Dsonar.password=111 -X -e -f hello/pom.xml'
           }
        }
    }
}
