pipeline {
    agent any
    tools {
        maven 'Maven_Home'
    }
    stages {
        stage('Build') {
            steps {
                sh "mvn clean -B -DskipTests clean package -f hello/pom.xml"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -f hello/pom.xml'
            }
            post {
                always {
                    junit(
                    testResults: 'hello/target/surefire-reports/TEST-org.example.CalculatorTest.xml'
                    )
                }
            }
        }
        stage('Allure report') {
            allure includeProperties: false, jdk: '', results: [[path: 'allure_results']]
        }
    }
}
